        "/api/orders": {
            "get": {
                "tags": [
                    "Orders"
                ],
                "summary": "Listar órdenes del usuario autenticado",
                "description": "Devuelve todas las órdenes realizadas por el usuario autenticado, junto con la información del evento asociado.",
                "operationId": "2cd7e03021e72d9d799c12dfe179c865",
                "responses": {
                    "200": {
                        "description": "Listado de órdenes del usuario autenticado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "quantity": {
                                                "type": "integer",
                                                "example": 2
                                            },
                                            "total": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 1500
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2025-10-08T18:00:00Z"
                                            },
                                            "event": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 3
                                                    },
                                                    "title": {
                                                        "type": "string",
                                                        "example": "Concierto de Rock"
                                                    },
                                                    "starts_at": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2025-11-01T21:00:00Z"
                                                    },
                                                    "price": {
                                                        "type": "number",
                                                        "example": 750
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autenticado"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
